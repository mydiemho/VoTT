{
  "name": "vott-react-typescript",
  "version": "0.1.0",
  "private": true,
  "main": "src/electron/main.ts",
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^4.1.3",
    "deepmerge": "^2.2.1",
    "lodash": "^4.17.11",
    "md5.js": "^1.3.5",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^5.1.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "react-virtualized": "^9.21.0",
    "redux": "^4.0.1",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "rimraf": "^2.6.2",
    "shortid": "^2.2.14"
  },
  "build": {
    "appId": "com.microsoft.vott",
    "artifactName": "${productName}-${os}.${ext}",
    "extends": null,
    "dmg": {
      "icon": "build/dist/icon.icns"
    },
    "win": {
      "icon": "build/dist/icon.ico"
    },
    "linux": {
      "target": [
        "snap"
      ]
    }
  },
  "scripts": {
    "start": "nf start -p 3000",
    "build": "react-scripts build",
    "pretest": "./node_modules/.bin/tslint 'src/**/*.ts*'",
    "lintfix": "./node_modules/.bin/tslint 'src/**/*.ts*' --fix",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "CI=true react-scripts test --env=jsdom",
    "dist": "electron-builder --publish never",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "eject": "react-scripts eject",
    "electron": "webpack --config ./config/webpack.dev.config.js && electron .",
    "electron-start": "node src/electron/start",
    "react-start": "react-scripts start",
    "compile": "tsc"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.5.0",
    "@types/axios": "^0.14.0",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "23.3.9",
    "@types/node": "10.12.7",
    "@types/react": "16.7.6",
    "@types/react-dom": "16.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/redux-logger": "^3.0.6",
    "@types/redux-thunk": "^2.1.0",
    "electron-builder": "^20.38.3",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "foreman": "^3.0.1",
    "jest-enzyme": "^7.0.1",
    "jquery": "^3.3.1",
    "node-sass": "^4.10.0",
    "popper.js": "^1.14.6",
    "react-jsonschema-form": "^1.0.6",
    "react-modal": "^3.6.1",
    "react-tag-input": "^6.1.0",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.2"
  },
  "postinstall": "electron-builder install-app-deps"
}
